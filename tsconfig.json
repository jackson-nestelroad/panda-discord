{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "lib": ["ES2018", "ES2019", "ES2020.String"],
        "types": [],
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": false,
        "sourceMap": true,
        "outDir": "./build",
        "skipLibCheck": true,
        "strictNullChecks": true
    },
    "include": ["./src/**/*", "./example/**/*"],
    "exclude": ["node_modules"]
}
